<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HasilActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginHorizontal="16dp">

            <TextView
                android:id="@+id/judul"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="HASIL INPUT DATA"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="2dp"
                android:fontFamily="sans-serif"/>

            <RelativeLayout
                android:layout_width="748dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:background="@color/cardview_light_background"
                android:elevation="1dp"
                android:paddingHorizontal="28dp"
                android:paddingVertical="35dp">

                <TextView
                    android:id="@+id/txt_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Brand Baju\t\t: "
                    android:textColor="@color/black"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/txt_jenis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_brand"
                    android:layout_marginTop="12dp"
                    android:text="Jenis\t\t\t\t\t\t\t: "
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txt_ukuran"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_jenis"
                    android:layout_marginTop="12dp"
                    android:text="Ukuran\t\t\t\t\t: "
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txt_jumlah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_ukuran"
                    android:layout_marginTop="12dp"
                    android:text="Jumlah\t\t\t\t\t: "
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/hasil_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/txt_brand"
                    android:text="Brand"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/hasil_jenis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hasil_brand"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@id/txt_jenis"
                    android:text="Jenis"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/hasil_ukuran"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hasil_jenis"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@id/txt_ukuran"
                    android:text="Ukuran"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/hasil_jumlah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hasil_ukuran"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@id/txt_jumlah"
                    android:text="Jumlah"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </RelativeLayout>

            <Button
                android:id="@+id/btn_kembali"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:text="Kembali"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:layout_marginBottom="4dp"
                android:textStyle="bold"
                android:backgroundTint="@color/teal_700"
                android:textSize="16dp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>